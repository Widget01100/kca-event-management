{
  "name": "kca-university-event-backend",
  "version": "2.0.0",
  "description": "RESTful API for KCA University Event Management System",
  "main": "app.js",
  "author": "KCA University Development Team",
  "license": "MIT",
  "keywords": [
    "kca-university",
    "event-management",
    "university-system",
    "postgresql",
    "express",
    "nodejs"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/kca-event-management.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node app.js",
    "dev": "nodemon app.js",
    "test": "jest --verbose",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js",
    "db:reset": "npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t kca-event-backend .",
    "docker:run": "docker run -p 5000:5000 kca-event-backend"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.7",
    "pg": "^8.11.3",
    "uuid": "^9.0.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "eslint": "^8.53.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3"
  }
}
